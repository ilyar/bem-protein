.line {
    @mixin $grid_row(false);

    .line {
        @mixin $grid_row(true);
    }
}

.line__col {
    @mixin $grid_column($total_columns);
    min-height: 10px;
}

@media $small_up {
    @mixin $grid_html_classes(s);
}

@media $medium_up {
    @mixin $grid_html_classes(m);
}

@media $large_up {
    @mixin $grid_html_classes(l);
}
