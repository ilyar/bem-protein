block('input').elem('help')(
    tag()('span'),
    attrs()(function () {
        return this._input.title
    }),
    content()(function() {
        return [
            {
                block: 'link',
                mods: {toggle: 'help'},
                href: '#',
                content: '?'
            },
            {
                block: 'input',
                elem: 'help-content',
                content: this.ctx.content
            }
        ];
    })
)
